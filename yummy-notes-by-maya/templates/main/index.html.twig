{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<!-- navbar and background image -->
<div class="banner" style="position: relative; filter: contrast(0.8); background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('imgs/main.jpg'); background-size: cover; background-position: center; height:70vh ;">
  <div class="container p-5">
    <div class="pages d-flex justify-content-between align-items-center">
      <div class="left-sided-pages d-flex justify-content-between">
        <a href="{{path('app_home')}}" class="text-white text-decoration-none me-5" style="font-family: var(--font-secondary); font-size: 16px;">home</a>
        <a href="" class="text-white text-decoration-none me-5" style="font-family: var(--font-secondary); font-size: 16px;">about</a>
      </div>
      <div class="logo text-center">
        <a href="{{ path('app_home') }}" class="text-white text-decoration-none" style="font-family: var(--font-primary); font-size: 32px; font-style: italic;">
          yummy notes <span class="by-maya">by maya</span>
        </a>
      </div>
      <div class="right-sided-pages">
        <a href="" class="text-white text-decoration-none ms-5" style="font-family: var(--font-secondary); font-size: 16px;">login</a>
      </div>
    </div>
  </div>

  <!-- brand message -->
  <div class="container d-flex flex-column align-items-center" style="position: absolute; top: 60%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
    <p class="text-white" style="font-family: var(--font-secondary);">Each recipe is crafted with love, rooted
      <br>in the rich culinary traditions of my hometown, Gwangju in Korea.
      <br>Enjoy discovering real home-cooked food where you can truly feel the love!
    </p>

    <!-- search section -->
    <div class="search d-flex justify-content-between" style="width: 400px;">
      <div class="input bg-white bg-opacity-25 rounded w-75" >
        <p style="text-align: center;">An input</p>
      </div>
      <div class="btn" style="background-color: #F6F8A1; font-family: var(--font-primary);">Search</div>
    </div>
  </div>

</div>

{% endblock %}
