{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<!-- Navbar -->
<div class="banner" style="margin-bottom:80px; position: relative; filter: contrast(0.8); background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('imgs/main.jpg'); background-size: cover;  background-position: 20% 18%; height:160px ;">
  <div class="container p-5">
    <div class="pages d-flex justify-content-between align-items-center">
      <div class="left-sided-pages d-flex justify-content-between">
        <a href="{{path('app_home')}}" class="text-white text-decoration-none me-5" style="font-family: var(--font-secondary); font-size: 16px;">home</a>
        <a href="{{path('app_about')}}" class="text-white text-decoration-none me-5" style="font-family: var(--font-secondary); font-size: 16px;">about</a>
      </div>
      <div class="logo text-center">
        <a href="{{ path('app_home') }}" class="text-white text-decoration-none" style="font-family: var(--font-primary); font-size: 32px; font-style: italic;">
          yummy notes <span class="by-maya">by maya</span>
        </a>
      </div>
      <div class="right-sided-pages">
        <a href="{{ path('app_logout') }}" class="text-white text-decoration-none ms-5" style="font-family: var(--font-secondary); font-size: 16px;">logout</a>
      </div>
    </div>
  </div>
</div>
<!-- introdudction -->
 <div class="container p-5" style="position: relative;">
  <h1 class="mb-3" style="font-family: var(--font-primary); font-size: 32px; font-style: italic;"><strong>My Page</strong></h1>
  <div class="" style="padding:70px 100px; margin-top:50px; width:1250px; background-color: white; border-radius: 30px; box-shadow: 4px 4px 10px 0px rgba(0, 0, 0, 0.1);">
    <div id="personal-info">
      <p style="font-family: var(--font-primary); font-size: 28px; margin-bottom: 0px;"> <strong> {{ first_name }} {{ last_name }}</p>
      <p style="font-family: var(--font-primary); font-size: 16px;"> {{ pseudo }}</p>
    </div>
    <hr>

    <div class="" style="padding: 10px 0px;">
      <h4 class="mb-3" style="font-family: var(--font-secondary); font-size: 24px;">Previous Orders</h4>
      <div class="d-flex">
        {% for order in orders %}
          {% set firstMenu = order.menu|first %}
          {% if firstMenu is not empty %}
              <div class="card-category" style="position: relative; background-color: white; height: 220px; width: 240px; margin-right:16px; box-shadow: 4px 4px 10px 0px rgba(0, 0, 0, 0.1); border-radius: 10px;">
                  <div class="image-info" style="margin:0 auto; padding:10px; text-align:center;">
                      <img src="{{ firstMenu.photo }}" alt="{{ firstMenu.name }}-img" style="width: 80%; height: 120px; margin: 10px;object-fit: cover;">
                  </div>
                  <div class="text-info" style="position: absolute; bottom: 16px; left: 20px;">
                      <p style="font-family: var(--font-secondary); font-size: 12px; margin-bottom: 4px; color: black;">{{ firstMenu.name }}</p>
                      <p style="font-family: var(--font-secondary); font-size: 12px; margin-bottom: 0px; color: black;"><strong>{{ firstMenu.time }} min</strong></p>
                  </div>
              </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
 </div>

{% endblock %}
