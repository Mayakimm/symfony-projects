{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<!-- Navbar -->
<div class="banner" style="margin-bottom:80px; position: relative; filter: contrast(0.8); background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('imgs/main.jpg'); background-size: cover;  background-position: 20% 18%; height:160px ;">
  <div class="container p-5">
    <div class="pages m-auto">
      <div class="logo text-center">
        <a href="{{ path('app_home') }}" class="text-white text-decoration-none" style="font-family: var(--font-primary); font-size: 32px; font-style: italic;">
          yummy notes <span class="by-maya">by maya</span>
        </a>
      </div>

    </div>
  </div>
</div>
<div class="container m-auto w-50">
  <h1 style="font-family: var(--font-secondary); font-size: 32px;">Create an account</h1>
  <span>Already have an account?</span>
  <a href="" class="text-dark text-decoration-none ms-2" style="font-family: var(--font-secondary);"><strong>Log in</strong></a>
  <div class="d-flex flex-column w-full mt-5">
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="d-flex justify-content-between">
      {{ form_widget(registrationForm.firstName, {'attr': {'style': 'width: 300px; height:74px; margin-bottom:10px; font-family: var(--font-secondary); padding-left: 30px; background-color: #F8F5DB; border:none; border-radius:12px;'}}) }}
      {{ form_widget(registrationForm.lastName, {'attr': {'style': 'width: 300px; height:74px; margin-bottom:10px; font-family: var(--font-secondary); padding-left: 30px; background-color: #F8F5DB; border:none; border-radius:12px;'}}) }}
    </div>
    <div class="d-flex flex-column">
      {{ form_widget(registrationForm.email, {'attr': {'style': 'height:74px; margin-bottom:10px; font-family: var(--font-secondary); padding-left: 30px; background-color: #F8F5DB; border:none; border-radius:12px;'}}) }}
      {{ form_widget(registrationForm.plainPassword.first, {'attr': {'style': 'height:74px; margin-bottom:10px; font-family: var(--font-secondary); padding-left: 30px; background-color: #F8F5DB; border:none; border-radius:12px;'}}) }}
      {{ form_widget(registrationForm.plainPassword.second, {'attr': {'style': 'height:74px; margin-bottom:10px; font-family: var(--font-secondary); padding-left: 30px; background-color: #F8F5DB; border:none; border-radius:12px;'}}) }}
    </div>
    <div class="form-group">
      {{ form_widget(registrationForm.agreeTerms) }}
      {{ form_label(registrationForm.agreeTerms, 'Agree to terms and conditions') }}
    </div>
    <div class="container m-auto w-50 mt-5">
      <button type="submit" class="btn" style="margin:0 auto; width: 200px; background-color: #F6F8A1; font-family: var(--font-primary); font-size: 26px;"><strong>Create account</strong></button>
    </div>
    {{ form_end(registrationForm) }}

  </div>

</div>
{% endblock %}
